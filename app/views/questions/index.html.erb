<p id="notice"><%= notice %></p>

<h1>Questions</h1>

<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Questions list</th>
      <th>Job type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.job_type %></td>
        <td><%= link_to 'Show', question, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_question_path(question), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

