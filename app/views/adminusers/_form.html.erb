   <em>(<%= @minimum_password_length %> characters minimum)</em>
   <% end %>
   <%= f.password_field :password, class:"form-control" %>
 </div>
 <div class="form-group">
   <%= f.label :passwordconfirmation %><br>
   <%= f.password_field :passwordconfirmation, class:"form-control" %>
 </div>
