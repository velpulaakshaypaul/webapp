   <%= f.label :lastname %><br>
   <%= f.text_field :lastname, class:"form-control" %>
 </div>
 <div class="form-group">
   <%= f.label :contact %><br>
   <%= f.text_field :contact, class:"form-control" %>
 </div>
 <div class="form-group">
   <%= f.label :email %><br>
   <%= f.text_field :email, class:"form-control" %>
 </div>
 <div class="form-group">
   <%= f.label :password %><br>
