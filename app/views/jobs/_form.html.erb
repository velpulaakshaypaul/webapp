<%= form_for(@job) do |f| %>
  <% if @job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% @job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col-xs-6 col-xs-offset-3">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group col-xs-6 col-xs-offset-3">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group col-xs-6 col-xs-offset-3">
    <%= f.label :qualifications %><br>
    <%= f.text_area :qualifications, class: "form-control" %>
  </div>
  <div class="form-group col-xs-6 col-xs-offset-3">
    <%= f.label :postedon %><br>
    <%= f.date_select :postedon, class: "form-control" %>
  </div>
  <div class="form-group col-xs-6 col-xs-offset-3">
    <%= f.label :deadline %><br>
    <%= f.date_select :deadline, class: "form-control" %>
  </div>

  <div class="form-group col-xs-6 col-xs-offset-3">
    <%= f.label :jobtypelabel, "Job Type:" %>
    <br />
    <%= f.radio_button(:jobtype, "Internship") %>
    <%= f.label(:jobtype_internship, "internship") %>
    <br />
    <%= f.radio_button(:jobtype, "Paid Employment") %>
    <%= f.label(:jobtype_paidemployment, "paid employment") %>
    <br />
    <%= f.radio_button(:jobtype, "Volunteer") %>
    <%= f.label(:jobtype_volunteer, "volunteer") %>
    </div>

  <div class="actions col-xs-6 col-xs-offset-3">
    <%= f.submit class:"btn btn-primary"%>
  </div>
<% end %>
